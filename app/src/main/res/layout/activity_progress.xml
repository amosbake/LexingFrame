<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lexing.lexingframe.ProgressActivity">

    <com.lexing.lprogressbarcollection.GradientProgressBar
        android:id="@+id/pb1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:flickRate="30"
        app:max="100"
        app:percentTextColor="@color/colorPrimaryDark"
        app:progress="20"/>

    <com.lexing.lprogressbarcollection.GradientProgressBar
        android:id="@+id/pb2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:endColor="#099ddf"
        app:flickRate="60"
        app:max="100"
        app:percentTextColor="@color/colorAccent"
        app:progress="30"
        app:startColor="#40c4ff"
        app:textMargin="3dp"
        app:textSize="12sp"/>
    <Button
        android:id="@+id/btnReset"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"/>
</LinearLayout>
