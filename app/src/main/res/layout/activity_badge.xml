<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_badge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lexing.lexingframe.badge.BadgeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.lexing.badgeview.BadgeView
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/ic_launcher"/>

        <com.lexing.badgeview.BadgeView
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/ic_launcher"
            app:btnBadgeText="2"/>

        <com.lexing.badgeview.BadgeView
            style="@style/BadgeButton.Normal"
            app:btnBadgeText="333"/>

        <com.lexing.badgeview.BadgeView
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/ic_launcher"
            app:btnBadgeText="1234"/>

        <com.lexing.badgeview.BadgeView
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/ic_launcher"
            app:btnBadgeText="12345"/>

        <com.lexing.badgeview.BadgeView
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/ic_launcher"
            app:btnBadgeText="12345+"/>
    </LinearLayout>
</RelativeLayout>
