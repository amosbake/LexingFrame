<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.lexing.lexingframe.FeatureSelectFragment">


    <Button
        android:text="Badge View"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_badge"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.AppCompat.Button.Colored"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        />

    <Button
        android:text="Ganhuo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ganhuo"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_badge"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:text="RxPermission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_rxpermission"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_ganhuo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        style="@style/Widget.AppCompat.Button.Colored"/>

</android.support.constraint.ConstraintLayout>
